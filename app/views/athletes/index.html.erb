<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Athletes" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Athletes</h1>
    <%= link_to "New athlete", new_athlete_path, class: "custom-button" %>
  </div>

  <div id="athletes" class="min-w-full">
    <% @athletes.each do |athlete| %>
      <%= render athlete %>
      <p>
        <%= link_to "Show this athlete", athlete, class: "custom-button" %>
      </p>
    <% end %>
  </div>
</div>
